<nav id="navSmall" class="visible-xs navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed navbar-left" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">Home</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav">
        {% for link in linklists.main-menu.links %}
        
        <li class="{% if link.active %} active{% endif %}">
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        
        {% comment %}
        {% if linklists[link.handle] == empty %}
        <li class="{% if link.active %} active{% endif %}">
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {% else %}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            {{ link.title }}
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            {% for l in linklists[link.handle].links %}
            <li class="{% if l.active %} active{% endif %}">
              <a href="{{ l.url }}">{{ l.title }}</a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% endcomment %}
        {% endfor %}
      </ul>

      <ul class="nav navbar-nav navbar-right">
        {% include 'customer_links' %}        
        
        <li id="cart-target" class="toolbar-cart {% if cart.item_count != 0 %}has-items{% endif %}">
          <a href="/cart" class="cart" title="Shopping Cart">
            <span class="fa fa-shopping-cart"></span>
            {{ 'layout.header.cart' | t }}
            <span id="cart-count">({{ cart.item_count }})</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
