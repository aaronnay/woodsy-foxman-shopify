<form action="{{ settings.mailing_list_form_action }}" method="post" class="mc-embedded-subscribe-form" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
  <h5>
    Let's Cross Paths
    {% comment %}
    {{ 'layout.footer.newsletter_title' | t }}
    {% endcomment %}
  </h5>
  <div class="form-group">
    <label for="newsletter-mail">Sign up for our newsletter to stay in-the-know</label>
    <div class="input-group col-sm-7 col-md-9 col-lg-8">
      <input type="email" class="form-control" id="newsletter-mail" name="EMAIL" placeholder="Your email" required data-msg-required="Required!" email="true" data-msg-email="Invalid! ex: person@domain.com">
      <span class="input-group-btn">
        <input type="submit" class="btn btn-default color-gold newsletter" value="Embark" name="subscribe" id="subscribe" />
      </span>
    </div>
  </div>
</form>